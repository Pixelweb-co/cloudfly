# === Evolution API ===
TZ=America/Bogota
AUTHENTICATION_API_KEY=CAMBIA_ESTA_LLAVE_LARGA_Y_UNICA

# --- Base de datos ---
DATABASE_ENABLED=true
DATABASE_PROVIDER=postgresql
# usa el nombre del servicio: postgresql (no "postgres_server")
DATABASE_CONNECTION_URI=postgres://chatbot_user:chatbot_pass@postgresql:5432/evolution?schema=public

# --- Redis (mismo cluster, DB separada opcional) ---
CACHE_REDIS_ENABLED=true
# usa el nombre del servicio: redis (no "redis_server")
CACHE_REDIS_URI=redis://redis:6379/2
CACHE_REDIS_PREFIX_KEY=evolution
CACHE_REDIS_TTL=604800
CACHE_REDIS_SAVE_INSTANCES=true

CHATWOOT_ENABLED=true

# --- Versión del WA client (déjalo como lo tienes) ---
CONFIG_SESSION_PHONE_VERSION=2.3000.1023204200

# --- INTEGRACIÓN CHATWOOT (habilita el conector global) ---
EXCHANGE_CHATWOOT_ENABLED=true
# usa URL interna entre contenedores
EXCHANGE_CHATWOOT_BASE_URL=http://chatwoot:3000
# Crea un Personal Access Token en Chatwoot (Profile → Access tokens)
EXCHANGE_CHATWOOT_ACCESS_TOKEN=TU_PAT_DE_CHATWOOT
# Normalmente 1 para el primer workspace
EXCHANGE_CHATWOOT_ACCOUNT_ID=1
# (opcional) crea/actualiza automáticamente los inbox/contacts
EXCHANGE_CHATWOOT_AUTO_CREATE=true
